<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/itemview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/r_bai"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingTop="@dimen/dp_10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:riv_corner_radius="@dimen/dp_20"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_8">
                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李花怒放一树白"
                    android:textColor="#373748"
                    android:textSize="@dimen/dp_14"/>
                <TextView
                    android:id="@+id/screen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3小时前"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_11"/>
            </LinearLayout>

        </LinearLayout>

        <Medium.DeFam.app.view.ExpandKOLView
            android:id="@+id/expand_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/texts"
            android:text="BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。"
            android:layout_marginTop="@dimen/dp_10"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_180"
            app:riv_corner_radius="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_5"
            android:scaleType="fitStart"/>
        <TextView
            android:id="@+id/href"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/textss"/>
        <LinearLayout
            android:id="@+id/myview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:textSize="@dimen/dp_12"
                android:paddingHorizontal="@dimen/dp_6"
                android:textColor="#1B1BDF"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/r_qianlan"
                android:gravity="center"
                android:text="主题贴"/>
            <TextView
                android:id="@+id/main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:text="迈向现代化强国的发展密码"
                android:textColor="@color/texts"/>

            <Medium.DeFam.app.view.ExpandKOLView1
                android:id="@+id/main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/texts"
                android:text="BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。" />
            <TextView
                android:id="@+id/main_href"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/textss"/>
        </LinearLayout>

        <TextView
            android:id="@+id/created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="#8B8D8D"
            android:layout_marginTop="@dimen/dp_5"
            android:text="2023"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:textSize="@dimen/dp_12"
            android:paddingHorizontal="@dimen/dp_6"
            android:textColor="#1B1BDF"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/r_qianlan"
            android:gravity="center"
            android:text="2023"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/fenxiang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/img10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:textColor="#767682"
                    android:textSize="@dimen/dp_12"
                    android:text="分享"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goodview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/goodimg"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/img12"/>
                <TextView
                    android:id="@+id/good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:textColor="#767682"
                    android:textSize="@dimen/dp_12"
                    android:text="36"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
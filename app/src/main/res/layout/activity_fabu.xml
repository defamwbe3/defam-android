<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/dp_16"
    android:orientation="vertical"
    android:background="@mipmap/img35">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#373748"
        android:textSize="@dimen/dp_30"
        android:textStyle="bold"
        android:text="发布"
        android:layout_marginTop="@dimen/dp_80"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#373748"
        android:textSize="@dimen/dp_18"
        android:text="这一刻，说出你的观点。"
        android:layout_marginTop="@dimen/dp_10"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="@dimen/dp_160"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_3"
            app:cardElevation="@dimen/dp_3"
            app:cardCornerRadius="@dimen/dp_12"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/guandian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/img36"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布观点"
                    android:layout_marginTop="@dimen/dp_30"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#373748"/>
            </LinearLayout>

          
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/changwen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginVertical="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            app:cardElevation="@dimen/dp_3"
            app:cardCornerRadius="@dimen/dp_12"
            android:background="@color/white"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/img37"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布长文"
                    android:layout_marginTop="@dimen/dp_30"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#373748"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/guanbi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/img38"/>


</LinearLayout>
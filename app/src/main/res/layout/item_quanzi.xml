<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/itemview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_2"
        android:paddingHorizontal="@dimen/dp_10"
        android:background="@drawable/r_bai"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:riv_corner_radius="@dimen/dp_20"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_8">
                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李花怒放一树白"
                    android:textColor="#373748"
                    android:textSize="@dimen/dp_14"/>
                <TextView
                    android:id="@+id/created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3小时前"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_11"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/is_follow"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/img14"/>
        </LinearLayout>


        <Medium.DeFam.app.view.ExpandTextView
            android:id="@+id/expand_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="#373748"
            android:text="BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。BlockFi出售2.39亿美元加密货币以支付预期破产费用，向员工发出裁员预警。"
            android:layout_marginTop="@dimen/dp_12"/>
        <LinearLayout
            android:id="@+id/imgview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:riv_corner_radius="@dimen/dp_3"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:riv_corner_radius="@dimen/dp_3"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/dp_6"
                android:scaleType="centerCrop"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:riv_corner_radius="@dimen/dp_3"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/dp_6"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/xian"
            android:layout_marginTop="@dimen/dp_14"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/fenxiang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/img10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:textColor="#767682"
                    android:textSize="@dimen/dp_12"
                    android:text="分享"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/img11"/>
                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:textColor="#767682"
                    android:textSize="@dimen/dp_12"
                    android:text="12"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/goodview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/goodimg"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/img12"/>
                <TextView
                    android:id="@+id/good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:textColor="#767682"
                    android:textSize="@dimen/dp_12"
                    android:text="36"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Medium.DeFam.app.common.titlebar.CommonTitleBar xmlns:titlebar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="新增地址"
        titlebar:fillStatusBar="true" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/r_bai"
        android:textColor="@color/texts"
        android:textSize="@dimen/dp_14"
        android:textColorHint="#BEBEC0"
        android:hint="请输入标签"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/r_bai"
        android:textColor="@color/texts"
        android:textSize="@dimen/dp_14"
        android:textColorHint="#BEBEC0"
        android:hint="请输入对应的地址"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/r_lan50"
        android:text="确定"/>
</LinearLayout>
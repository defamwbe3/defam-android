<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/itemview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_2"
        android:background="@drawable/r_bai"
        android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            app:riv_corner_radius_top_left="8dp"
            app:riv_corner_radius_top_right="@dimen/dp_8"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_16"
            android:textColor="#373748"
            android:text="深圳SMART元宇宙讨论会"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginHorizontal="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12">
            <TextView
                android:id="@+id/start_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_marginBottom="@dimen/dp_3"
                android:textSize="@dimen/dp_12"
                android:lines="1"
                android:ellipsize="end"
                android:text="2022.12.01 8:00 ~ 2022.12.31 17:00"/>
            <TextView
                android:id="@+id/status_text"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_32"
                android:background="@drawable/r_lan"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_13"
                android:text="进行中"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
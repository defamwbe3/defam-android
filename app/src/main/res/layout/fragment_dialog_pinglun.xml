<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/mainbt_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/guanbi1" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="回复"
                android:textColor="#373748"
                android:textSize="@dimen/dp_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/xian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    app:riv_corner_radius="@dimen/dp_16" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小迷妹HH"
                        android:textColor="#373748"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:id="@+id/created_ats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3小时前"
                        android:textColor="#999999"
                        android:textSize="@dimen/dp_10" />
                </LinearLayout>

                <TextView
                    android:id="@+id/good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:textColor="#373748"
                    android:textSize="@dimen/dp_11" />

                <ImageView
                    android:id="@+id/is_good"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:src="@mipmap/img30" />
            </LinearLayout>

            <TextView
                android:id="@+id/contentmy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_38"
                android:layout_marginTop="@dimen/dp_10"
                android:text="李白的乐府、歌行及绝句成就为最高。其歌行，完全打破诗歌创作的一切固有格式。"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="全部回复"
                android:textColor="#373748"
                android:textSize="@dimen/dp_16" />
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlEnablePreviewInEditMode="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_12"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="@dimen/dp_0"
                        android:listSelector="@android:color/transparent" />
                    <include
                        android:id="@+id/not"
                        layout="@layout/notview" />
                </RelativeLayout>

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/xian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_32"
                android:maxHeight="@dimen/dp_80"
                android:paddingVertical="@dimen/dp_6"
                android:layout_weight="1"
                android:textColorHint="#BEBEC0"
                android:textColor="@color/texts"
                android:textSize="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_12"
                android:paddingHorizontal="@dimen/dp_10"
                android:hint="说点什么吧~"
                android:background="@drawable/r_shuru"/>

            <TextView
                android:id="@+id/fabu"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_32"
                android:gravity="center"
                android:textColor="#373748"
                android:text="发布"
                android:textSize="@dimen/dp_15"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
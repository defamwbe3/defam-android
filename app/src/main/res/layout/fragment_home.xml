<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_26"
                    android:src="@mipmap/img77" />

                <LinearLayout
                    android:id="@+id/sousuo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/r_hui20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_8">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/icon_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="搜索更多精彩资讯"
                        android:textColor="#BEBEC0"
                        android:textSize="@dimen/dp_12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:drawableLeft="@mipmap/icon_integral"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center"
                    android:text="0.00"
                    android:textColor="#1B1BDD"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/suipian_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:drawableLeft="@mipmap/icon_debris"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#1B1BDD"
                    android:textSize="@dimen/dp_12" />

            </LinearLayout>
        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="Medium.DeFam.app.view.AppBarLayoutBehavior">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/coll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.youth.banner.Banner
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="@dimen/dp_8"
                            app:banner_auto_loop="true"
                            app:banner_indicator_normal_color="@color/color_C8CAF0"
                            app:banner_indicator_normal_width="6dp"
                            app:banner_indicator_selected_color="@color/color_1B1BDD"
                            app:banner_indicator_selected_width="6dp" />

                        <LinearLayout
                            android:id="@+id/gonggao"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginHorizontal="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_6"
                            android:background="@drawable/r_qianlan"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@mipmap/img46" />

                            <ViewFlipper
                                android:id="@+id/marquee_view"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_20"
                                android:flipInterval="2000"
                                android:inAnimation="@anim/anim_marquee_in"
                                android:outAnimation="@anim/anim_marquee_out" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10" />


            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@mipmap/img7"
        android:visibility="gone"/>
</RelativeLayout>
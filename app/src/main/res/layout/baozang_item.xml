<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/itemview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/r_bai"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            app:riv_corner_radius="@dimen/dp_8"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/map_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_8"
            android:text="国潮插画系列"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/xian"
            android:layout_marginHorizontal="@dimen/dp_8"/>
        <TextView
            android:id="@+id/status_text"
            android:layout_width="94dp"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/r_lan"
            android:layout_marginVertical="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"
            android:text="藏宝图提现"/>

        <RelativeLayout
            android:id="@+id/huizhiview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10">

            <TextView
                android:id="@+id/huizhi"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_28"
                android:textSize="@dimen/dp_11"
                android:lines="1"
                android:ellipsize="end"
                android:text="hppts://dahjn23456c..."
                android:textColor="#1B1BDD"
                android:paddingRight="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:background="@drawable/r_qianlan1"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/img82"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
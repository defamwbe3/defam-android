<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Medium.DeFam.app.common.titlebar.CommonTitleBar xmlns:titlebar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="找回密码"
        titlebar:fillStatusBar="true" />
    
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/r_bai"
        android:textColor="@color/texts"
        android:textSize="@dimen/dp_14"
        android:textColorHint="#BEBEC0"
        android:hint="请输入手机号/邮箱"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/r_bai"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:background="@android:color/transparent"
            android:textColor="@color/texts"
            android:textSize="@dimen/dp_14"
            android:textColorHint="#BEBEC0"
            android:inputType="number"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/iv_yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:gravity="center"
            android:textColor="#01C8E5"
            android:textSize="@dimen/dp_14"
            android:text="获取验证码"/>
    </LinearLayout>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/r_bai"
        android:textColor="@color/texts"
        android:textSize="@dimen/dp_14"
        android:textColorHint="#BEBEC0"
        android:inputType="textPassword"
        android:hint="请输入新密码"/>
    <EditText
        android:id="@+id/password_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/r_bai"
        android:textColor="@color/texts"
        android:textSize="@dimen/dp_14"
        android:textColorHint="#BEBEC0"
        android:inputType="textPassword"
        android:hint="请再次输入新密码"/>
    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/r_lan50"
        android:text="确定"/>
</LinearLayout>
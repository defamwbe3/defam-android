<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Medium.DeFam.app.common.titlebar.CommonTitleBar xmlns:titlebar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="设置"
        titlebar:fillStatusBar="true" />

    <LinearLayout
        android:id="@+id/xinxi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:orientation="horizontal"
        android:background="@drawable/r_bai"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_14"
            android:textColor="#373748"
            android:text="个人信息"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/img60"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoujihao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:orientation="horizontal"
        android:background="@drawable/r_bai"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_14"
            android:textColor="#373748"
            android:text="手机号"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:textSize="@dimen/dp_14"
            android:textColor="#BEBEC0"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/img60"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mima"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:orientation="horizontal"
        android:background="@drawable/r_bai"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_14"
            android:textColor="#373748"
            android:text="登录密码"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/img60"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/guanyu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:orientation="horizontal"
        android:background="@drawable/r_bai"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_14"
            android:textColor="#373748"
            android:text="关于我们"/>
        <TextView
            android:id="@+id/app_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:textSize="@dimen/dp_14"
            android:textColor="#BEBEC0"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/img60"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zhuxiao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:orientation="horizontal"
        android:background="@drawable/r_bai"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_14"
            android:textColor="#373748"
            android:text="账户注销"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/img60"/>
    </LinearLayout>
    <Button
        android:id="@+id/tuichu"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/r_bai"
        android:textColor="#1B1BDD"
        android:textSize="@dimen/dp_16"
        android:text="退出登录"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_40"/>
</LinearLayout>
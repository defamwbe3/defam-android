<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!--主题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_D4D4D4</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- 去掉activity初始进去闪黑或加载背景问题 禁止Preview Window-->
    <style name="AppTheme_quhei" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/bg</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="colorAccent">@color/bg</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
</resources>